{
    "version": "0.3.0",
    "configurations": [
        {
            "name": "开发调试",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/main.py",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "windows": {
                "console": "integratedTerminal"
            },
            "linux": {
                "console": "integratedTerminal",
                "runtimeExecutable": "sudo",
                "runtimeArgs": ["${command:python.interpreterPath}"]
            }
        }
    ]
}